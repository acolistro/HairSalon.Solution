@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>ADD NEW STYLIST</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  <br>
  <input type="submit" class="btn-block" value="ADD STYLIST" />
}
@Html.ActionLink("RETURN TO ALL STYLISTS", "Index", "Stylists",  null, new { @class = "btn-block" })