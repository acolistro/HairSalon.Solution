@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>ADD NEW STYLIST</h1>
<div class="forms">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Specialty)
    @Html.TextBoxFor(model => model.Specialty)
    <br>
    <input type="submit" id="new-stylist" value="ADD STYLIST" />
  }
  <br>
  @Html.ActionLink("RETURN TO ALL STYLISTS", "Index", "Stylists",  null, new { @class = "btn" })
</div>