@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

@if (@Model.Count == 0)
{
  <h1>no clients found</h1>
} else
{
  <h1>CLIENTELE</h1>
  <hr />
  <ul>
    @foreach (Client client in Model)
    {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
    }
  </ul>
}

@Html.ActionLink("SHOW ALL STYLISTS", "Index", "Stylists", null, new { @class = "btn-block" })